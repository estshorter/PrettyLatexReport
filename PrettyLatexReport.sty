\newcommand*{\bmdot}[1]{\dot{\bm{#1}}} % bold dot
\newcommand*{\bmddot}[1]{\ddot{\bm{#1}}} % bold dot dot
\newcommand*{\vecdot}[1]{\dot{\vec{#1}}} % vec dot
\newcommand*{\vecddot}[1]{\ddot{\vec{#1}}} % vec dot dot

\newcommand*{\twovec}[2] % 2D Vector (2x1 Matrix)
{
	\begin{bmatrix}
		#1 \\
		#2
	\end{bmatrix}
}

\newcommand*{\thrvec}[3] % 3D Vector (3x1 Matrix)
{
	\begin{bmatrix}
		#1 \\
		#2 \\
		#3
	\end{bmatrix}
}

\newcommand*{\twomat}[4] % 2x2 Matrix
{ 
	\begin{bmatrix}
		#1 & #2 \\
		#3 & #4
	\end{bmatrix}
}

\newcommand*{\thrmat}[9] % 3x3 Matrix
{
	\begin{bmatrix}
		#1 & #2 & #3 \\
		#4 & #5 & #6 \\
		#7 & #8 & #9
	\end{bmatrix}
}

\newcommand*{\twovect}[2] % 2x1 Matrix
{
	\begin{bmatrix}
		#1 & #2
	\end{bmatrix}
}

\newcommand*{\thrvect}[3] % 3x1 Matrix
{
	\begin{bmatrix}
		#1 & #2 & #3
	\end{bmatrix}
}

\newcommand*{\diff}[2] % 全微分
{
	\frac{\mathrm{d}#1}{\mathrm{d}#2}
}

\newcommand*{\pardif}[2] % 偏微分
{
	\frac{\partial #1}{\partial #2}
}